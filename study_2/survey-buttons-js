myIPCCButton.onclick = function(){showIPCCButton()};
function showIPCCButton() {
var x = document.getElementById("myIPCCContent");
var y = document.getElementById("myIPCCButton");
if (x.style.display === "block") {
    x.style.display = "none";
    y.innerHTML = 'What is the IPCC?';
} else {
    x.style.display = "block";
    y.innerHTML = 'Hide Information';
}
}

